<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPatient">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/teal_700"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:includeFontPadding="false"
            android:text="@string/add_patient"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:id="@+id/addDoctor"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/save"
            app:tint="@color/white"
            android:contentDescription="@string/todo" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/background_search"
                android:backgroundTint="@color/colorDefaultNoteColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_weight="0.2"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/single_user_icon"
                    app:tint="@color/white"
                    android:contentDescription="@string/todo" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/patient_name"
                    android:inputType="text"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_15ssp"
                    android:importantForAutofill="no" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/background_search"
                android:backgroundTint="@color/colorDefaultNoteColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_weight="0.2"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/mobile"
                    app:tint="@color/white"
                    android:contentDescription="@string/todo" />

                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_15ssp"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/background_search"
                android:backgroundTint="@color/colorDefaultNoteColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_weight="0.2"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/disease"
                    app:tint="@color/white"
                    android:contentDescription="@string/todo" />

                <EditText
                    android:id="@+id/diseaseType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/disease_type"
                    android:inputType="text"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_15ssp"
                    android:importantForAutofill="no" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/background_search"
                android:backgroundTint="@color/colorDefaultNoteColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_weight="0.2"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/doctor_appoint"
                    app:tint="@color/white"
                    android:contentDescription="@string/todo" />

                <EditText
                    android:id="@+id/doctorAppointed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/doctor_appointed"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_15ssp"
                    android:importantForAutofill="no" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/background_search"
                android:backgroundTint="@color/colorDefaultNoteColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/choose_status_type"
                    android:inputType="text"
                    android:padding="@dimen/_3sdp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_15ssp"
                    android:importantForAutofill="no" />


            </LinearLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="2"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2690BA"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:src="@drawable/cured"
                            android:contentDescription="@string/todo"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cured"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/notCured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#D6341F"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:src="@drawable/not_cured"
                            android:contentDescription="@string/todo"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/under_treatment"
                            android:textAlignment="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>